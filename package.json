{
  "name": "constructbms",
  "version": "1.0.0",
  "description": "Construction Business Management System",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:frontend\" \"pnpm run dev:backend\"",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "cd backend && pnpm run dev",
    "dev:clean": "./scripts/dev-manager.sh restart",
    "dev:kill": "./scripts/dev-manager.sh kill",
    "dev:manager": "./scripts/dev-manager.sh",
    "build": "pnpm run build:frontend && pnpm run build:backend",
    "build:frontend": "cd frontend && pnpm run build",
    "build:backend": "cd backend && pnpm run build",
    "lint": "pnpm run lint:frontend && pnpm run lint:backend",
    "lint:frontend": "cd frontend && pnpm run lint",
    "lint:backend": "cd backend && pnpm run lint",
    "lint:fix": "pnpm run lint:fix:frontend && pnpm run lint:fix:backend",
    "lint:fix:frontend": "cd frontend && pnpm run lint:fix",
    "lint:fix:backend": "cd backend && pnpm run lint:fix",
    "test": "pnpm run test:frontend && pnpm run test:backend",
    "test:frontend": "cd frontend && pnpm run test",
    "test:backend": "cd backend && pnpm run test",
    "prepare": "husky install",
    "typecheck": "pnpm run typecheck:frontend && pnpm run typecheck:backend",
    "typecheck:frontend": "cd frontend && pnpm run typecheck",
    "typecheck:backend": "cd backend && pnpm run typecheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "clean": "pnpm run clean:frontend && pnpm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf dist node_modules/.cache",
    "clean:backend": "cd backend && rm -rf dist node_modules/.cache",
    "quality": "pnpm run format && pnpm run lint:fix && pnpm run typecheck",
    "pre-commit": "lint-staged",
    "eslint": "eslint .",
    "prettier": "prettier --check .",
    "snap": "./scripts/snap.sh",
    "snap:push": "./scripts/snap.sh && git push",
    "frontend": "cd frontend && pnpm",
    "backend": "cd backend && pnpm"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "concurrently": "^9.2.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.42.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/constructbms.git"
  },
  "keywords": [
    "construction",
    "business",
    "management",
    "react",
    "typescript",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT"
}
